{
  "manifest_version": 3,
  "name": "Webverse",
  "version": "1.0.0",
  "description": "Webverse is the collaborative canvas to annotate the web. Draw together in real time. Public, private, and shared spaces.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Webverse"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js.iife.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["toolbar/*", "vendor/*"],
      "matches": ["<all_urls>"]
    }
  ]
}